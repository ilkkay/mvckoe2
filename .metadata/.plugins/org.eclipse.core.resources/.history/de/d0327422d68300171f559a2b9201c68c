package translateit2.exception;

import java.io.IOException;

import translateit2.fileloader.FileLoadError;

public class TranslateIt2ServiceException extends IOException  /* RuntimeException */  {
    private static final long serialVersionUID = 1L;

    private FileLoadError errorCode;

    public FileLoadError getErrorCode(){
        return this.errorCode;
    }

    public TranslateIt2ServiceException(FileLoadError errorCode) {
        this.errorCode = errorCode;
    }
    
    public TranslateIt2ServiceException(FileLoadError errorCode, String message){
        super(message);
        this.errorCode=errorCode;
    }

    public TranslateIt2ServiceException(FileLoadError errorCode, Throwable cause) {
        super(cause);
        this.errorCode = errorCode;
    }

}
