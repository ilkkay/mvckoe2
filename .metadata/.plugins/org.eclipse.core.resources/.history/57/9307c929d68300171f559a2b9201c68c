package translateit2.exception;

import java.io.IOException;

import translateit2.fileloader.TranslateIt2Error;

public class TranslateIt2ServiceException extends IOException  /* RuntimeException */  {
    private static final long serialVersionUID = 1L;

    private TranslateIt2Error errorCode;

    public TranslateIt2Error getErrorCode(){
        return this.errorCode;
    }

    public TranslateIt2ServiceException(TranslateIt2Error errorCode) {
        this.errorCode = errorCode;
    }
    
    public TranslateIt2ServiceException(TranslateIt2Error errorCode, String message){
        super(message);
        this.errorCode=errorCode;
    }

    public TranslateIt2ServiceException(TranslateIt2Error errorCode, Throwable cause) {
        super(cause);
        this.errorCode = errorCode;
    }

}
