package translateit2.fileloader;

public enum FileLoadError {
    CANNOT_CREATE_UPLOAD_DIRECTORY(0, ""),
    CANNOT_CREATE_PERMANENT_DIRECTORY(1, ""),
    CANNOT_MOVE_FILE(2, ""),
    CANNOT_READ_LANGUAGE_FROM_FILE_NAME(3, "FileStorageService.code_missing"),
    CANNOT_READ_APPLICATION_NAME_FROM_FILE_NAME(4, ""),
    CANNOT_READ_FILE(5, "FileStorageService.not_read_properties_file"),
    CANNOT_UPLOAD_FILE(6, ""),
    FILE_NOT_FOUND(7, "FileStorageService.not_find_file"),
    FILE_TOBELOADED_IS_EMPTY(8, "FileStorageService.empty_properties_file"),
    IMPROPER_CHARACTERSET_IN_FILE(9, "FileStorageService.false_encoding"),
    IMPROPER_EXTENSION_IN_FILE_NAME(10, "FileStorageService.not_properties_file"),
    IMPROPER_APPLICATION_NAME_IN_FILE_NAME(11, ""),
    IMPROPER_LOCALE_IN_FILE_NAME(12, ""),
    UNDEFINED_ERROR(12, "");

    private final int code;
    private final String description;

    private FileLoadError(int code, String description) {
      this.code = code;
      this.description = description;
    }

    public String getDescription() {
       return description;
    }

    public int getCode() {
       return code;
    }

    @Override
    public String toString() {
      return code + ": " + description;
    }
  }